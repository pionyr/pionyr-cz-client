{
    "name": "pionyr/pionyr-cz-client",
    "type": "library",
    "description": "PHP API Client for API provided by Pionyr.cz",
    "license": "MIT",
    "authors": [
        {
            "name": "Ond≈ôej Machulda",
            "email": "ondrej.machulda@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "beberlei/assert": "^3.0",
        "fig/http-message-util": "^1.1",
        "myclabs/php-enum": "^1.6",
        "pascaldevink/shortuuid": "^2.0",
        "php-http/client-common": "^1.7",
        "php-http/discovery": "^1.4",
        "php-http/httplug": "^1.1",
        "php-http/message-factory": "^1.0",
        "ramsey/uuid": "^3.7"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.13",
        "lmc/coding-standard": "^2.0",
        "php-coveralls/php-coveralls": "^2.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message": "^1.6",
        "php-http/mock-client": "^1.1",
        "php-mock/php-mock-phpunit": "^2.1",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^0.12.16",
        "phpstan/phpstan-phpunit": "^0.12.0",
        "phpunit/phpunit": "^7.1 || ^8.5.13",
        "symfony/var-dumper": "^4.0 || ^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Pionyr\\PionyrCz\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pionyr\\PionyrCz\\": "tests/unit/",
            "Pionyr\\PionyrCz\\IntegrationTests\\": "tests/integration/"
        }
    },
    "scripts": {
        "all": [
            "@analyze",
            "@test"
        ],
        "analyze": [
            "vendor/bin/ecs check ./src/ ./tests/ ./examples/ --ansi",
            "vendor/bin/phpstan analyze -c phpstan.neon --ansi"
        ],
        "fix": [
            "@composer normalize",
            "vendor/bin/ecs check ./src/ ./tests/ ./examples/ --ansi --fix"
        ],
        "lint": [
            "vendor/bin/parallel-lint -j 10 -e php ./src ./tests ./examples/",
            "@composer validate",
            "@composer normalize --dry-run"
        ],
        "test": [
            "./vendor/bin/phpunit --colors=always"
        ]
    }
}
